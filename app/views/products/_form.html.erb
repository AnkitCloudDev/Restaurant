<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active %>
  </div>
  
  <div>
    <h1>Choose add-on for the Product</h1>
    <div class="field">
     Extra meal voucher:
     <%= check_box_tag 'product[voucher]', 'voucher' %>
    </div>
<div class="field">
     Coke
    <%= check_box_tag 'product[coke]', 'coke' %>
</div>
<div class="field">
     Extra Topings:
  <%= check_box_tag 'product[toppings]', 'toppings' %>
</div>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
