<p id="notice"><%= notice %></p>

<h1>Your Previous Orders History</h1> <br>

<table class="table">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Product</th>
      <th>Unit price</th>
      <th>Quantity</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_histories.each do |order_history| %>
      <tr>
        <td><%= order_history.id %></td>
        <td><%= Product.find(order_history.product_id).name %></td>
        <td><%= order_history.unit_price %></td>
        <td><%= order_history.quantity %></td>
        <td><%= order_history.total_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

